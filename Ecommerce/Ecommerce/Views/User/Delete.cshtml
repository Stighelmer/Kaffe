@model Ecommerce.ViewModels.UserViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h3>Are you sure you want to delete this user?</h3>

    <table class="table">
        @Html.HiddenFor(model => model.UserId)
        <tr>
            <td>Email</td>
            <td>@Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = true })</td>
        </tr>
        <tr>
            <td>Role</td>
            <td>@Html.TextBoxFor(model => model.UserRoles, new { @class = "form-control", @readonly = true })</td>
        </tr>
    </table>

    <input type="submit" value="Delete" class="btn btn-default" />

    <br />
    <br />

    <div>
        @Html.ActionLink("Back", "Index")
    </div>
}